<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTextStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="BaseTextStyle.Middle">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="BaseTextStyle.Big">
        <item name="android:layout_marginTop">40sp</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="CardView.CuteStyle">
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">5dp</item>
    </style>
</resources>